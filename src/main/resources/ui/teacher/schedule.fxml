<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<VBox prefHeight="600.0" prefWidth="950.0" spacing="12.0" styleClass="content-area"
   stylesheets="@shared_teacher.css"
   xmlns="http://javafx.com/javafx/21"
   xmlns:fx="http://javafx.com/fxml/1"
   fx:controller="com.khazar.sims.ui.teacher.ScheduleController">

<padding>
    <Insets bottom="15.0" left="20.0" right="20.0" top="15.0" />
</padding>

<children>
    <HBox spacing="20.0" styleClass="stats-panel">
        <children>
            <VBox spacing="2.0" styleClass="stat-card" HBox.hgrow="ALWAYS">
                <children>
                    <Label text="Total Classes" styleClass="stat-label-small" />
                    <Label fx:id="lblTotalClasses" text="0" styleClass="stat-value stat-primary">
                        <font><Font name="System Bold" size="24.0" /></font>
                    </Label>
                </children>
                <padding>
                    <Insets bottom="10.0" left="15.0" right="15.0" top="10.0" />
                </padding>
            </VBox>
            
            <VBox spacing="2.0" styleClass="stat-card" HBox.hgrow="ALWAYS">
                <children>
                    <Label text="Total Teaching Hours" styleClass="stat-label-small" />
                    <Label fx:id="lblTotalHours" text="0.0" styleClass="stat-value stat-success">
                        <font><Font name="System Bold" size="24.0" /></font>
                    </Label>
                </children>
                <padding>
                    <Insets bottom="10.0" left="15.0" right="15.0" top="10.0" />
                </padding>
            </VBox>

            <VBox spacing="2.0" styleClass="stat-card" HBox.hgrow="ALWAYS">
                <children>
                    <Label text="Days Teaching / Week" styleClass="stat-label-small" />
                    <Label fx:id="lblDaysTeaching" text="0" styleClass="stat-value stat-warning">
                        <font><Font name="System Bold" size="24.0" /></font>
                    </Label>
                </children>
                <padding>
                    <Insets bottom="10.0" left="15.0" right="15.0" top="10.0" />
                </padding>
            </VBox>
            
            <VBox spacing="2.0" styleClass="stat-card stat-card-info" HBox.hgrow="ALWAYS">
                <children>
                    <Label text="Current Semester" styleClass="stat-label-small" />
                    <Label text="Fall 2024" styleClass="stat-value">
                        <font><Font name="System Bold" size="20.0" /></font>
                    </Label>
                </children>
                <padding>
                    <Insets bottom="10.0" left="15.0" right="15.0" top="10.0" />
                </padding>
            </VBox>
        </children>
    </HBox>
    
    <VBox styleClass="table-container" VBox.vgrow="ALWAYS">
        <children>
            <TableView fx:id="scheduleTable" styleClass="data-table schedule-table" VBox.vgrow="ALWAYS">
                <columns>
                    <TableColumn fx:id="colDay" prefWidth="90.0" text="Day" />
                    <TableColumn fx:id="colTime" prefWidth="130.0" text="Time" />
                    <TableColumn fx:id="colCourse" prefWidth="220.0" text="Course (Code - Name)" />
                    <TableColumn fx:id="colRoom" prefWidth="100.0" text="Room" />
                    <TableColumn fx:id="colEnrolled" prefWidth="90.0" text="Enrolled" />
                </columns>
                <columnResizePolicy>
                    <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                </columnResizePolicy>
            </TableView>
        </children>
    </VBox>
    
    <HBox alignment="CENTER_LEFT" styleClass="status-bar-container">
        <children>
            <Label fx:id="statusLabel" styleClass="status-label" text="Status: Ready">
                <font><Font size="12.0" /></font>
            </Label>
        </children>
        <padding>
            <Insets bottom="5.0" left="10.0" right="10.0" top="5.0" />
        </padding>
    </HBox>
</children>


</VBox>