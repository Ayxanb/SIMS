<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import java.lang.String?>

<BorderPane prefHeight="700.0" prefWidth="1200.0" stylesheets="@student.css"
            xmlns="http://javafx.com/javafx/25"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.khazar.sims.ui.student.StudentController">

    <left>
        <VBox alignment="TOP_LEFT" spacing="5" styleClass="sidebar">

            <children>

                <VBox alignment="TOP_LEFT">
                    <padding><Insets left="20.0" right="20.0"/></padding>
                </VBox>

                <Button fx:id="btnCourses" maxWidth="Infinity"
                        onAction="#handleA"
                        styleClass="nav-btn" text="A"/>

                <Button fx:id="btnEnrollments" maxWidth="Infinity"
                        onAction="#handleB"
                        styleClass="nav-btn" text="B"/>

                <Button fx:id="btnAttendance" maxWidth="Infinity"
                        onAction="#handleC"
                        styleClass="nav-btn" text="C"/>

                <VBox VBox.vgrow="ALWAYS"/>

                <VBox>
                    <children>
                        <Button maxWidth="Infinity"
                                styleClass="logout-btn"
                                text="↪️ Logout"
                                onAction="#handleLogout"/>
                    </children>

                    <VBox.margin>
                        <Insets bottom="20" left="20" right="20" top="10"/>
                    </VBox.margin>
                </VBox>

            </children>
        </VBox>
    </left>

    <center>
        <StackPane fx:id="contentArea" styleClass="content-area" BorderPane.alignment="CENTER"/>
    </center>

</BorderPane>