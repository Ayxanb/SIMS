<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox prefHeight="600.0" prefWidth="950.0" styleClass="content-area" stylesheets="@attendance.css" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.khazar.sims.ui.student.AttendanceController">
   <children>
    <!-- Statistics Cards -->
    <HBox styleClass="stats-panel">
     <children>
      <VBox styleClass="stat-card" alignment="CENTER" HBox.hgrow="ALWAYS">
         <children>
          <Label styleClass="stat-label" text="TOTAL SESSIONS">
           <font><Font size="10.0" /></font>
          </Label>
          <Label fx:id="lblTotalSessions" styleClass="stat-value" text="0">
           <font><Font name="System Bold" size="24.0" /></font>
          </Label>
         </children>
         <padding>
          <Insets bottom="12.0" left="15.0" right="15.0" top="12.0" />
         </padding>
      </VBox>
      
      <VBox alignment="CENTER" HBox.hgrow="ALWAYS">
         <children>
          <Label styleClass="stat-label" text="PRESENT">
           <font><Font size="10.0" /></font>
          </Label>
          <Label fx:id="lblPresent" text="0">
           <font><Font name="System Bold" size="24.0" /></font>
           <styleClass>
            <String fx:value="stat-value" />
            <String fx:value="stat-success" />
           </styleClass>
          </Label>
         </children>
         <padding>
          <Insets bottom="12.0" left="15.0" right="15.0" top="12.0" />
         </padding>
         <styleClass>
          <String fx:value="stat-card" />
          <String fx:value="stat-card-success" />
         </styleClass>
      </VBox>
      
      <VBox spacing="5.0" alignment="CENTER" HBox.hgrow="ALWAYS">
         <children>
          <Label styleClass="stat-label" text="ABSENT">
           <font><Font size="10.0" /></font>
          </Label>
          <Label fx:id="lblAbsent" text="0">
           <font><Font name="System Bold" size="24.0" /></font>
           <styleClass>
            <String fx:value="stat-value" />
            <String fx:value="stat-danger" />
           </styleClass>
          </Label>
         </children>
         <padding>
          <Insets bottom="12.0" left="15.0" right="15.0" top="12.0" />
         </padding>
         <styleClass>
          <String fx:value="stat-card" />
          <String fx:value="stat-card-danger" />
         </styleClass>
      </VBox>
      
      <VBox spacing="5.0" alignment="CENTER" HBox.hgrow="ALWAYS">
         <children>
          <Label styleClass="stat-label" text="ATTENDANCE RATE">
           <font><Font size="10.0" /></font>
          </Label>
          <Label fx:id="lblAttendanceRate" text="0.0%">
           <font><Font name="System Bold" size="24.0" /></font>
           <styleClass>
            <String fx:value="stat-value" />
            <String fx:value="stat-primary" />
           </styleClass>
          </Label>
         </children>
         <padding>
          <Insets bottom="12.0" left="15.0" right="15.0" top="12.0" />
         </padding>
         <styleClass>
          <String fx:value="stat-card" />
          <String fx:value="stat-card-primary" />
         </styleClass>
      </VBox>
     </children>
    </HBox>
    
    <!-- Course Filter -->
    <HBox alignment="CENTER_LEFT" spacing="10.0" styleClass="filter-section">
     <children>
      <Label styleClass="filter-label" text="Select Course:">
         <font><Font name="System Bold" size="12.0" /></font>
      </Label>
      <ComboBox fx:id="cmbCourse" prefWidth="450.0" promptText="Loading..." styleClass="course-combo" />
     </children>
    </HBox>
    
    <!-- Attendance Table -->
    <VBox styleClass="table-container" VBox.vgrow="ALWAYS">
     <children>
      <TableView fx:id="attendanceTable" styleClass="data-table" VBox.vgrow="ALWAYS">
         <columns>
          <TableColumn fx:id="colDate" prefWidth="90.0" text="Date" />
          <TableColumn fx:id="colDay" prefWidth="90.0" text="Day" />
          <TableColumn fx:id="colTime" prefWidth="130.0" text="Time" />
          <TableColumn fx:id="colStatus" prefWidth="120.0" text="Status" />
         </columns>
         <columnResizePolicy>
          <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
         </columnResizePolicy>
      </TableView>
     </children>
    </VBox>
    
    <!-- Status Bar -->
    <HBox alignment="CENTER" styleClass="status-bar-container">
     <children>
      <Label fx:id="statusLabel" styleClass="status-label" text="Status: Ready">
         <font><Font size="12.0" /></font>
      </Label>
     </children>
     <padding>
      <Insets bottom="8.0" left="12.0" right="12.0" top="8.0" />
     </padding>
    </HBox>
   </children>
</VBox>
