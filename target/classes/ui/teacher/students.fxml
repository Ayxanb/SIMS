<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ProgressIndicator?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox prefHeight="600.0" prefWidth="950.0" spacing="8.0" styleClass="content-area" stylesheets="@students.css" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.khazar.sims.ui.teacher.StudentsController">
  
  <padding>
    <Insets bottom="8.0" left="10.0" right="10.0" top="8.0" />
  </padding>
  
  <children>
    <!-- Header -->
    <HBox alignment="CENTER_LEFT" spacing="10.0" styleClass="header-section">
      <children>
        <ProgressIndicator fx:id="progressIndicator" prefHeight="25.0" prefWidth="25.0" visible="false" />
      </children>
    </HBox>
    
    <!-- Statistics -->
    <HBox spacing="10.0" styleClass="stats-panel">
      <children>
        <VBox spacing="2.0" styleClass="stat-card" HBox.hgrow="ALWAYS">
          <children>
            <Label styleClass="stat-label" text="Total Students">
              <font><Font size="9.0" /></font>
            </Label>
            <Label fx:id="lblTotalStudents" styleClass="stat-value" text="0">
              <font><Font name="System Bold" size="20.0" /></font>
            </Label>
          </children>
          <padding>
            <Insets bottom="10.0" left="12.0" right="12.0" top="10.0" />
          </padding>
        </VBox>        
      </children>
    </HBox>
    
    <!-- Filters -->
    <HBox alignment="CENTER_LEFT" spacing="10.0" styleClass="filter-bar">
      <children>
        <Label styleClass="filter-label" text="Course:">
          <font><Font name="System Bold" size="11.0" /></font>
        </Label>
        <ComboBox fx:id="cmbCourse" prefWidth="300.0" promptText="Select course..." styleClass="filter-combo" />
        
        <Region HBox.hgrow="ALWAYS" />
        
        <Label styleClass="search-icon" text="ðŸ”" />
        <TextField fx:id="txtSearch" prefWidth="250.0" promptText="Search students..." styleClass="search-field" />
      </children>
      <padding>
        <Insets bottom="8.0" left="10.0" right="10.0" top="8.0" />
      </padding>
    </HBox>
    
    <!-- Student Table -->
    <VBox styleClass="table-container" VBox.vgrow="ALWAYS">
      <children>
        <TableView fx:id="studentTable" styleClass="data-table" VBox.vgrow="ALWAYS">
          <columns>
            <TableColumn fx:id="colStudentId" prefWidth="100.0" text="Student ID" />
            <TableColumn fx:id="colFirstName" prefWidth="120.0" text="First Name" />
            <TableColumn fx:id="colLastName" prefWidth="120.0" text="Last Name" />
            <TableColumn fx:id="colEmail" prefWidth="200.0" text="Email" />
            <TableColumn fx:id="colDepartment" prefWidth="150.0" text="Department" />
          </columns>
          <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
          </columnResizePolicy>
        </TableView>
      </children>
      <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
      </padding>
    </VBox>
    
    <!-- Status Bar -->
    <HBox alignment="CENTER" styleClass="status-bar">
      <children>
        <Label fx:id="statusLabel" styleClass="status-label" text="Status: Ready">
          <font><Font size="10.0" /></font>
        </Label>
      </children>
      <padding>
        <Insets bottom="4.0" left="8.0" right="8.0" top="4.0" />
      </padding>
    </HBox>
  </children>
</VBox>
