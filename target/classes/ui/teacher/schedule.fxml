<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox prefHeight="600.0" prefWidth="950.0" spacing="12.0" styleClass="content-area" stylesheets="@shared_teacher.css" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.khazar.sims.ui.teacher.ScheduleController">

<padding>
  <Insets bottom="15.0" left="20.0" right="20.0" top="15.0" />
</padding>

<children>
  <HBox spacing="20.0" styleClass="stats-panel">
    <children>
      <VBox spacing="2.0" styleClass="stat-card" HBox.hgrow="ALWAYS">
        <children>
          <Label styleClass="stat-label-small" text="Total Classes" />
          <Label fx:id="lblTotalClasses" styleClass="stat-value stat-primary" text="0">
            <font><Font name="System Bold" size="24.0" /></font>
          </Label>
        </children>
        <padding>
          <Insets bottom="10.0" left="15.0" right="15.0" top="10.0" />
        </padding>
      </VBox>
      
      <VBox spacing="2.0" styleClass="stat-card" HBox.hgrow="ALWAYS">
        <children>
          <Label styleClass="stat-label-small" text="Total Teaching Hours" />
          <Label fx:id="lblTotalHours" styleClass="stat-value stat-success" text="0.0">
            <font><Font name="System Bold" size="24.0" /></font>
          </Label>
        </children>
        <padding>
          <Insets bottom="10.0" left="15.0" right="15.0" top="10.0" />
        </padding>
      </VBox>

      <VBox spacing="2.0" styleClass="stat-card" HBox.hgrow="ALWAYS">
        <children>
          <Label styleClass="stat-label-small" text="Days Teaching / Week" />
          <Label fx:id="lblDaysTeaching" styleClass="stat-value stat-warning" text="0">
            <font><Font name="System Bold" size="24.0" /></font>
          </Label>
        </children>
        <padding>
          <Insets bottom="10.0" left="15.0" right="15.0" top="10.0" />
        </padding>
      </VBox>      
    </children>
  </HBox>
  
  <VBox styleClass="table-container" VBox.vgrow="ALWAYS" spacing="10" >
    <children>
      <TableView fx:id="scheduleTable" VBox.vgrow="ALWAYS">
        <columns>
          <TableColumn fx:id="colDay" prefWidth="90.0" text="Day" />
          <TableColumn fx:id="colTime" prefWidth="130.0" text="Time" />
          <TableColumn fx:id="colCourse" prefWidth="220.0" text="Course (Code - Name)" />
          <TableColumn fx:id="colRoom" prefWidth="100.0" text="Room" />
          <TableColumn fx:id="colEnrolled" prefWidth="90.0" text="Enrolled" />
        </columns>
        <columnResizePolicy>
          <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
        </columnResizePolicy>
         <styleClass>
          <String fx:value="data-table" />
          <String fx:value="schedule-table" />
         </styleClass>
      </TableView>
    </children>
  </VBox>
  
  <HBox alignment="CENTER" styleClass="status-bar-container">
    <children>
      <Label fx:id="statusLabel" styleClass="status-label" text="Status: Ready">
        <font><Font size="12.0" /></font>
      </Label>
    </children>
    <padding>
      <Insets bottom="5.0" left="10.0" right="10.0" top="5.0" />
    </padding>
  </HBox>
</children>


</VBox>
