<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ProgressIndicator?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox prefHeight="600.0" prefWidth="950.0" spacing="8.0" styleClass="content-area" stylesheets="@shared_teacher.css" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.khazar.sims.ui.teacher.AttendanceController">
   
   <padding>
      <Insets bottom="8.0" left="10.0" right="10.0" top="8.0" />
   </padding>
   
   <children>
      <!-- Header -->
      <HBox alignment="CENTER_LEFT" spacing="10.0" styleClass="header-section">
         <children>
            <ProgressIndicator fx:id="progressIndicator" prefHeight="25.0" prefWidth="25.0" visible="false" />
         </children>
      </HBox>
      
      <!-- Statistics -->
      <HBox spacing="10.0" styleClass="stats-panel">
         <children>
            <VBox spacing="2.0" styleClass="stat-card" HBox.hgrow="ALWAYS">
               <children>
                  <Label styleClass="stat-label" text="Total Students">
                     <font><Font size="9.0" /></font>
                  </Label>
                  <Label fx:id="lblTotalStudents" styleClass="stat-value" text="0">
                     <font><Font name="System Bold" size="20.0" /></font>
                  </Label>
               </children>
               <padding>
                  <Insets bottom="10.0" left="12.0" right="12.0" top="10.0" />
               </padding>
            </VBox>
            
            <VBox spacing="2.0" styleClass="stat-card" HBox.hgrow="ALWAYS">
               <children>
                  <Label styleClass="stat-label" text="Present">
                     <font><Font size="9.0" /></font>
                  </Label>
                  <Label fx:id="lblPresentCount" text="0">
                     <font><Font name="System Bold" size="20.0" /></font>
                     <styleClass>
                        <String fx:value="stat-value" />
                        <String fx:value="stat-success" />
                     </styleClass>
                  </Label>
               </children>
               <padding>
                  <Insets bottom="10.0" left="12.0" right="12.0" top="10.0" />
               </padding>
            </VBox>
            
            <VBox spacing="2.0" styleClass="stat-card" HBox.hgrow="ALWAYS">
               <children>
                  <Label styleClass="stat-label" text="Absent">
                     <font><Font size="9.0" /></font>
                  </Label>
                  <Label fx:id="lblAbsentCount" text="0">
                     <font><Font name="System Bold" size="20.0" /></font>
                     <styleClass>
                        <String fx:value="stat-value" />
                        <String fx:value="stat-error" />
                     </styleClass>
                  </Label>
               </children>
               <padding>
                  <Insets bottom="10.0" left="12.0" right="12.0" top="10.0" />
               </padding>
            </VBox>
            
            <VBox spacing="2.0" styleClass="stat-card" HBox.hgrow="ALWAYS">
               <children>
                  <Label styleClass="stat-label" text="Attendance Rate">
                     <font><Font size="9.0" /></font>
                  </Label>
                  <Label fx:id="lblAttendanceRate" text="0.0%">
                     <font><Font name="System Bold" size="20.0" /></font>
                     <styleClass>
                        <String fx:value="stat-value" />
                        <String fx:value="stat-primary" />
                     </styleClass>
                  </Label>
               </children>
               <padding>
                  <Insets bottom="10.0" left="12.0" right="12.0" top="10.0" />
               </padding>
            </VBox>
         </children>
      </HBox>
      
      <!-- Filters -->
      <HBox alignment="CENTER_LEFT" spacing="10.0" styleClass="filter-bar">
         <children>
            <Label styleClass="filter-label" text="Course:">
               <font><Font name="System Bold" size="11.0" /></font>
            </Label>
            <ComboBox fx:id="cmbCourse" prefWidth="300.0" promptText="Select course..." styleClass="filter-combo" />
            
            <Label styleClass="filter-label" text="Date:">
               <font><Font name="System Bold" size="11.0" /></font>
            </Label>
            <DatePicker fx:id="dpAttendanceDate" prefWidth="150.0" styleClass="date-picker" />
            
            <Region HBox.hgrow="ALWAYS" />
            
            <Button fx:id="btnMarkAll" onAction="#handleMarkAllPresent" styleClass="btn-outline" text="âœ“ Mark All" />
            <Button fx:id="btnClearAll" onAction="#handleClearAll" styleClass="btn-outline" text="âœ— Clear All" />
            <Button fx:id="btnSave" onAction="#handleSaveAttendance" styleClass="btn-outline" text="ðŸ’¾ Save" />
         </children>
         <padding>
            <Insets bottom="8.0" left="10.0" right="10.0" top="8.0" />
         </padding>
      </HBox>
      
      <!-- Attendance Table -->
      <VBox styleClass="table-container" VBox.vgrow="ALWAYS">
         <children>
            <TableView fx:id="attendanceTable" styleClass="data-table" VBox.vgrow="ALWAYS">
               <columns>
                  <TableColumn fx:id="colStudentNo" prefWidth="120.0" text="Student ID" />
                  <TableColumn fx:id="colStudentName" prefWidth="300.0" text="Student Name" />
                  <TableColumn fx:id="colPresent" prefWidth="150.0" text="Present" />
               </columns>
               <columnResizePolicy>
                  <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
               </columnResizePolicy>
            </TableView>
         </children>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </VBox>
      
      <!-- Status Bar -->
      <HBox alignment="CENTER" styleClass="status-bar">
         <children>
            <Label fx:id="statusLabel" styleClass="status-label" text="Status: Ready">
               <font><Font size="10.0" /></font>
            </Label>
         </children>
         <padding>
            <Insets bottom="4.0" left="8.0" right="8.0" top="4.0" />
         </padding>
      </HBox>
   </children>
</VBox>
