<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="650.0" prefWidth="1000.0"
            stylesheets="@grades_assessment.css"
            xmlns="http://javafx.com/javafx/25"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.khazar.sims.ui.teacher.GradesAssessmentController">

    <!-- ================= TOP FILTER BAR ================= -->
    <top>
        <VBox spacing="15.0" styleClass="header-box" BorderPane.alignment="CENTER">
            <padding>
                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
            </padding>
            <HBox alignment="CENTER_LEFT" spacing="15.0">
                <Label styleClass="filter-label" text="Filter by Course:"/>
                <ComboBox fx:id="cmbCourse"
                          prefWidth="250.0"
                          promptText="Select a Course"
                          styleClass="filter-combo"/>

                <!-- âœ… REMOVED because controller does NOT support this -->
                <!-- cmbAssessmentFilter -->
                <!-- btnNewAssessment -->
            </HBox>
        </VBox>
    </top>

    <!-- ================= TABLE ================= -->
    <center>
        <VBox spacing="10.0" BorderPane.alignment="CENTER">
            <padding>
                <Insets bottom="20.0" left="20.0" right="20.0"/>
            </padding>

            <TableView fx:id="gradesTable" VBox.vgrow="ALWAYS">
                <columns>
                    <TableColumn fx:id="colStudentId" prefWidth="75.0" text="ID"/>
                    <TableColumn fx:id="colStudentName" prefWidth="250.0" text="Student Name"/>
                    <TableColumn fx:id="colAssessment" prefWidth="150.0" text="Assessment"/>
                    <TableColumn fx:id="colScore" prefWidth="100.0" text="Score"/>
                    <TableColumn fx:id="colMaxScore" prefWidth="100.0" text="Max Score"/>
                    <TableColumn fx:id="colDate" prefWidth="150.0" text="Date Submitted"/>
                </columns>

                <columnResizePolicy>
                    <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                </columnResizePolicy>
            </TableView>

            <Label fx:id="lblTotalStudents" text="0"/>
            <Label fx:id="statusLabel" text="Status: Ready"/>

        </VBox>
    </center>
</BorderPane>
